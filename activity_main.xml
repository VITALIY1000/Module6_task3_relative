<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">
        
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/title_text"
            style="@style/TextStyle.Black"
            android:textStyle="bold" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/title_data"
            android:textColor="@color/white"
            style="@style/TextStyle"
            android:background="@drawable/oval"
            android:layout_alignParentRight="true" />
        
        <View
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/BorderStyle"
            android:layout_marginTop="4dp"
            android:layout_below="@id/title" />
        
        <TextView
            android:id="@+id/subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle1_text"
            style="@style/TextStyle.Black"
            android:layout_below="@id/border1" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle1_data"
            style="@style/TextStyle"
            android:layout_below="@id/border1"
            android:layout_alignParentRight="true" />
        
        <View
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/BorderStyle"
            android:layout_below="@id/subtitle1" />
        
        <TextView
            android:id="@+id/subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle2_text"
            style="@style/TextStyle.Black"
            android:layout_below="@id/border2" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle2_data"
            style="@style/TextStyle"
            android:layout_below="@id/border2"
            android:layout_alignParentRight="true" />
        
        <View
            android:id="@+id/border3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/BorderStyle"
            android:layout_below="@id/subtitle2" />
        
        <TextView
            android:id="@+id/subtitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle3_text"
            style="@style/TextStyle.Black"
            android:layout_below="@id/border3" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle3_data"
            style="@style/TextStyle"
            android:layout_below="@id/border3"
            android:layout_alignParentRight="true" />
        
        <View
            android:id="@+id/border4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/BorderStyle"
            android:layout_below="@id/subtitle3" />
        
        <TextView
            android:id="@+id/subtitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle4_text"
            style="@style/TextStyle.Black"
            android:layout_below="@id/border4" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle4_data"
            style="@style/TextStyle"
            android:layout_below="@id/border4"
            android:layout_alignParentRight="true" />
        
        <View
            android:id="@+id/border5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            style="@style/BorderStyle"
            android:layout_below="@id/subtitle4" />
        
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content"
            style="@style/TextStyle.Black"
            android:layout_below="@id/border5" />
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/desertcity"
            android:layout_below="@id/content" />
        
    </RelativeLayout>
        
</ScrollView>
